@model persona_ciudad.Pages.Ubicacion.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ubicacion[0].Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
